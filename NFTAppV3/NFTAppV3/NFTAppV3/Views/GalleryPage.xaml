<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFTAppV3.Views.GalleryPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            
            <Label Text="Gallery"               
                   HorizontalOptions="Center"
                   FontSize="40"
                   TextColor="White"/>

            <Button x:Name="btnNFTs" 
                    Text="Your NFT's"
                    VerticalOptions="Center"
                    Margin="70"
                    Clicked="btnNFTs_Clicked">
            </Button>

            <!--Will try and make this contacts-->
            <Button x:Name="btnFriends" 
                    Text="Friends"
                    VerticalOptions="Center"
                    Margin="70">
            </Button>

            <Button x:Name="btnMarketplace" 
                    Text="BlueToque Marketplace"
                    VerticalOptions="Center"
                    Margin="70">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>